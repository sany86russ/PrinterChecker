<Window x:Class="TonerWatch.Desktop.AddDeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить устройство - TonerWatch" 
        Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#0F172A"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        TextOptions.TextHintingMode="Fixed"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    
    <Window.Resources>
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="36"/>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#14B8A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0F766E"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05" CenterX="0.5" CenterY="0.5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95" CenterX="0.5" CenterY="0.5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Добавить новое устройство" FontSize="24" FontWeight="Bold" 
                      Foreground="White" Margin="0,0,0,8"/>
            <TextBlock Text="Введите данные для добавления принтера в систему мониторинга" 
                      FontSize="14" Foreground="#94A3B8"/>
        </StackPanel>
        
        <!-- Form -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="IP адрес или имя хоста *" FontSize="14" Foreground="White" Margin="0,0,0,8"/>
            <TextBox x:Name="IpAddressTextBox" Text="" FontSize="14" Padding="12" 
                    Background="#1E293B" Foreground="White" BorderBrush="#374151" 
                    BorderThickness="1" Margin="0,0,0,20"
                    TextChanged="IpAddressTextBox_TextChanged"/>
            
            <!-- IP Validation Message -->
            <TextBlock x:Name="IpValidationText" Text="" FontSize="12" 
                     Foreground="#F59E0B" Margin="0,0,0,20" Visibility="Collapsed"/>
            
            <TextBlock Text="Имя устройства" FontSize="14" Foreground="White" Margin="0,0,0,8"/>
            <TextBox x:Name="DeviceNameTextBox" Text="" Style="{StaticResource ModernTextBoxStyle}" 
                    Margin="0,0,0,20"/>
            
            <TextBlock Text="Местоположение" FontSize="14" Foreground="White" Margin="0,0,0,8"/>
            <TextBox x:Name="LocationTextBox" Text="" Style="{StaticResource ModernTextBoxStyle}" 
                    Margin="0,0,0,20" 
                    ToolTip="Укажите местоположение принтера (например: Офис 1 этаж, Ресепшн, Конференц-зал)"/>
            
            <TextBlock Text="* Обязательные поля" FontSize="12" Foreground="#94A3B8" 
                      HorizontalAlignment="Right" Margin="0,0,0,10"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" Width="100" Height="36" Margin="0,0,12,0"
                   Background="#374151" Foreground="White" BorderThickness="0"
                   Click="CancelButton_Click"/>
            <Button Content="Добавить" Width="100" Height="36"
                   Background="#14B8A6" Foreground="White" BorderThickness="0"
                   Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>