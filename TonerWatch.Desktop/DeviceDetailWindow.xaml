<Window x:Class="TonerWatch.Desktop.DeviceDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Device Details - TonerWatch" 
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        TextOptions.TextHintingMode="Fixed"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <!-- Card Style -->
        <Style x:Key="DetailCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#14B8A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0F766E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Toner Level Text Style -->
        <Style x:Key="TonerLevelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <!-- Modern Toner Gauge Style -->
        <Style x:Key="ModernTonerGaugeStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="12"/>
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <Border Name="PART_Track" CornerRadius="6">
                                <Border Name="PART_Indicator" 
                                      Background="{TemplateBinding Foreground}" 
                                      CornerRadius="6" 
                                      HorizontalAlignment="Left">
                                </Border>
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Supply Level Animation -->
        <Storyboard x:Key="SupplyLevelAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
        </Storyboard>
    </Window.Resources>

    <Grid Background="#0F172A">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#1E293B" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="#14B8A6" CornerRadius="12" Width="40" Height="40" 
                          VerticalAlignment="Center" Margin="0,0,12,0">
                        <TextBlock Text="🖨️" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Device Details" FontSize="24" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="HP LaserJet Pro M404n - 192.168.1.100" FontSize="14" 
                                 Foreground="#94A3B8" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="⬅️ Back" Style="{StaticResource ActionButtonStyle}" 
                           Margin="0,0,12,0" Click="BackButton_Click"/>
                    <Button Content="⚙️ Settings" Style="{StaticResource ActionButtonStyle}" 
                           Click="SettingsButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Device Information Section -->
                <Border Grid.Row="0" Style="{StaticResource DetailCardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="ℹ️ Device Information" FontSize="20" FontWeight="Bold" 
                                 Foreground="White" Margin="0,0,0,20"/>
                        
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Model:" FontSize="14" Foreground="#94A3B8" 
                                     VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="HP LaserJet Pro M404n" FontSize="14" 
                                     Foreground="White" FontWeight="Medium" Margin="12,0,0,8"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Serial Number:" FontSize="14" Foreground="#94A3B8" 
                                     VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="CNB1234567" FontSize="14" 
                                     Foreground="White" FontWeight="Medium" Margin="12,0,0,8"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Firmware Version:" FontSize="14" Foreground="#94A3B8" 
                                     VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="20230515" FontSize="14" 
                                     Foreground="White" FontWeight="Medium" Margin="12,0,0,8"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="IP Address:" FontSize="14" Foreground="#94A3B8" 
                                     VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="192.168.1.100" FontSize="14" 
                                     Foreground="White" FontWeight="Medium" Margin="12,0,0,8"/>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Location:" FontSize="14" Foreground="#94A3B8" 
                                     VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="Office Floor 1" FontSize="14" 
                                     Foreground="White" FontWeight="Medium" Margin="12,0,0,0"/>
                        </Grid>
                        
                        <!-- SNMP Information -->
                        <Border Background="#374151" CornerRadius="8" Padding="16" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="📡 SNMP Information" FontSize="16" FontWeight="Bold" 
                                         Foreground="White" Margin="0,0,0,12"/>
                                
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="SNMP Version:" FontSize="13" Foreground="#94A3B8" 
                                             VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="SNMPv2c" FontSize="13" 
                                             Foreground="White" Margin="12,0,0,0"/>
                                </Grid>
                                
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Community String:" FontSize="13" Foreground="#94A3B8" 
                                             VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="public" FontSize="13" 
                                             Foreground="White" Margin="12,0,0,0"/>
                                </Grid>
                                
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="System OID:" FontSize="13" Foreground="#94A3B8" 
                                             VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="1.3.6.1.4.1.11.2.3.9.1" FontSize="13" 
                                             Foreground="White" Margin="12,0,0,0"/>
                                </Grid>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="MIB Support:" FontSize="13" Foreground="#94A3B8" 
                                             VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="Standard Printer MIB, HP Printer MIB" FontSize="13" 
                                             Foreground="White" Margin="12,0,0,0" TextWrapping="Wrap"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
                
                <!-- Supply Levels Section -->
                <Border Grid.Row="1" Style="{StaticResource DetailCardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="🎨 Supply Levels" FontSize="20" FontWeight="Bold" 
                                     Foreground="White"/>
                            <Button Grid.Column="1" Content="🔄 Refresh" Style="{StaticResource ActionButtonStyle}" 
                                   FontSize="12" Padding="8,4" Click="RefreshDeviceButton_Click"/>
                        </Grid>
                        
                        <!-- Black Toner -->
                        <Grid Margin="0,0,0,20" RenderTransformOrigin="0.5,0.5">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Style.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard Storyboard="{StaticResource SupplyLevelAnimation}"/>
                                        </EventTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <Border Background="#1F2937" CornerRadius="12" Padding="10,6" Margin="0,0,12,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="12" Height="12" Fill="#1F2937" Margin="0,0,6,0"/>
                                            <TextBlock Text="Black Toner" FontSize="14" Foreground="White" FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                    <TextBlock Text="HP 58A Compatible" FontSize="12" Foreground="#94A3B8" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Column="1" Text="75%" Style="{StaticResource TonerLevelTextStyle}" 
                                         Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>
                            
                            <ProgressBar Grid.Row="1" Value="75" Maximum="100" Style="{StaticResource ModernTonerGaugeStyle}" 
                                       Foreground="#1F2937" Margin="0,0,0,6"/>
                            
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Estimated: ~2,850 pages remaining" FontSize="11" Foreground="#94A3B8"/>
                                <Border Grid.Column="1" Background="#10B981" CornerRadius="4" Padding="4,2">
                                    <TextBlock Text="HEALTHY" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                </Border>
                            </Grid>
                        </Grid>
                        
                        <!-- Cyan Toner -->
                        <Grid Margin="0,0,0,20" RenderTransformOrigin="0.5,0.5">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Style.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard Storyboard="{StaticResource SupplyLevelAnimation}"/>
                                        </EventTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <Border Background="#0EA5E9" CornerRadius="12" Padding="10,6" Margin="0,0,12,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="12" Height="12" Fill="#0EA5E9" Margin="0,0,6,0"/>
                                            <TextBlock Text="Cyan Toner" FontSize="14" Foreground="White" FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                    <TextBlock Text="HP 58A Compatible" FontSize="12" Foreground="#94A3B8" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Column="1" Text="45%" Style="{StaticResource TonerLevelTextStyle}" 
                                         Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>
                            
                            <ProgressBar Grid.Row="1" Value="45" Maximum="100" Style="{StaticResource ModernTonerGaugeStyle}" 
                                       Foreground="#0EA5E9" Margin="0,0,0,6"/>
                            
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Estimated: ~1,710 pages remaining" FontSize="11" Foreground="#94A3B8"/>
                                <Border Grid.Column="1" Background="#F59E0B" CornerRadius="4" Padding="4,2">
                                    <TextBlock Text="WARNING" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                </Border>
                            </Grid>
                        </Grid>
                        
                        <!-- Magenta Toner -->
                        <Grid Margin="0,0,0,20" RenderTransformOrigin="0.5,0.5">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Style.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard Storyboard="{StaticResource SupplyLevelAnimation}"/>
                                        </EventTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <Border Background="#EC4899" CornerRadius="12" Padding="10,6" Margin="0,0,12,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="12" Height="12" Fill="#EC4899" Margin="0,0,6,0"/>
                                            <TextBlock Text="Magenta Toner" FontSize="14" Foreground="White" FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                    <TextBlock Text="HP 58A Compatible" FontSize="12" Foreground="#94A3B8" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Column="1" Text="60%" Style="{StaticResource TonerLevelTextStyle}" 
                                         Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>
                            
                            <ProgressBar Grid.Row="1" Value="60" Maximum="100" Style="{StaticResource ModernTonerGaugeStyle}" 
                                       Foreground="#EC4899" Margin="0,0,0,6"/>
                            
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Estimated: ~2,280 pages remaining" FontSize="11" Foreground="#94A3B8"/>
                                <Border Grid.Column="1" Background="#10B981" CornerRadius="4" Padding="4,2">
                                    <TextBlock Text="HEALTHY" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                </Border>
                            </Grid>
                        </Grid>
                        
                        <!-- Yellow Toner -->
                        <Grid Margin="0,0,0,20" RenderTransformOrigin="0.5,0.5">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Style.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard Storyboard="{StaticResource SupplyLevelAnimation}"/>
                                        </EventTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <Border Background="#EAB308" CornerRadius="12" Padding="10,6" Margin="0,0,12,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="12" Height="12" Fill="#EAB308" Margin="0,0,6,0"/>
                                            <TextBlock Text="Yellow Toner" FontSize="14" Foreground="White" FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                    <TextBlock Text="HP 58A Compatible" FontSize="12" Foreground="#94A3B8" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Column="1" Text="85%" Style="{StaticResource TonerLevelTextStyle}" 
                                         Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>
                            
                            <ProgressBar Grid.Row="1" Value="85" Maximum="100" Style="{StaticResource ModernTonerGaugeStyle}" 
                                       Foreground="#EAB308" Margin="0,0,0,6"/>
                            
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Estimated: ~3,230 pages remaining" FontSize="11" Foreground="#94A3B8"/>
                                <Border Grid.Column="1" Background="#10B981" CornerRadius="4" Padding="4,2">
                                    <TextBlock Text="HEALTHY" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                </Border>
                            </Grid>
                        </Grid>
                        
                        <!-- Drum Unit -->
                        <Grid RenderTransformOrigin="0.5,0.5">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Style.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard Storyboard="{StaticResource SupplyLevelAnimation}"/>
                                        </EventTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <Border Background="#64748B" CornerRadius="12" Padding="10,6" Margin="0,0,12,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="12" Height="12" Fill="#64748B" Margin="0,0,6,0"/>
                                            <TextBlock Text="Drum Unit" FontSize="14" Foreground="White" FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                    <TextBlock Text="HP 58A Compatible" FontSize="12" Foreground="#94A3B8" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Column="1" Text="90%" Style="{StaticResource TonerLevelTextStyle}" 
                                         Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>
                            
                            <ProgressBar Grid.Row="1" Value="90" Maximum="100" Style="{StaticResource ModernTonerGaugeStyle}" 
                                       Foreground="#64748B" Margin="0,0,0,6"/>
                            
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Estimated: ~18,000 pages remaining" FontSize="11" Foreground="#94A3B8"/>
                                <Border Grid.Column="1" Background="#10B981" CornerRadius="4" Padding="4,2">
                                    <TextBlock Text="HEALTHY" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                </Border>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Device Statistics Section -->
                <Border Grid.Row="2" Style="{StaticResource DetailCardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="📈 Device Statistics" FontSize="20" FontWeight="Bold" 
                                 Foreground="White" Margin="0,0,0,20"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="#1F2937" CornerRadius="8" Padding="16" Margin="0,0,8,0">
                                <StackPanel>
                                    <TextBlock Text="🖨️ Total Pages" FontSize="14" Foreground="#94A3B8" Margin="0,0,0,8"/>
                                    <TextBlock Text="12,450" FontSize="24" FontWeight="Bold" Foreground="White"/>
                                    <TextBlock Text="+245 today" FontSize="12" Foreground="#10B981" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="1" Background="#1F2937" CornerRadius="8" Padding="16" Margin="8,0,8,0">
                                <StackPanel>
                                    <TextBlock Text="🕒 Uptime" FontSize="14" Foreground="#94A3B8" Margin="0,0,0,8"/>
                                    <TextBlock Text="127 days" FontSize="24" FontWeight="Bold" Foreground="White"/>
                                    <TextBlock Text="Last reboot: 3 days ago" FontSize="12" Foreground="#94A3B8" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="2" Background="#1F2937" CornerRadius="8" Padding="16" Margin="8,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="⚠️ Alerts" FontSize="14" Foreground="#94A3B8" Margin="0,0,0,8"/>
                                    <TextBlock Text="2 active" FontSize="24" FontWeight="Bold" Foreground="#F59E0B"/>
                                    <TextBlock Text="View details →" FontSize="12" Foreground="#14B8A6" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Recent Activity Section -->
                <Border Grid.Row="3" Style="{StaticResource DetailCardStyle}">
                    <StackPanel>
                        <TextBlock Text="📝 Recent Activity" FontSize="20" FontWeight="Bold" 
                                 Foreground="White" Margin="0,0,0,20"/>
                        
                        <ItemsControl>
                            <ItemsControl.Items>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Ellipse Width="8" Height="8" Fill="#10B981" Margin="0,6,12,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Toner level updated" FontSize="14" Foreground="White" FontWeight="Medium"/>
                                        <TextBlock Text="Black toner level changed from 76% to 75%" FontSize="12" Foreground="#94A3B8"/>
                                        <TextBlock Text="2 minutes ago" FontSize="11" Foreground="#64748B" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Ellipse Width="8" Height="8" Fill="#10B981" Margin="0,6,12,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Device status changed" FontSize="14" Foreground="White" FontWeight="Medium"/>
                                        <TextBlock Text="Device status changed from Offline to Online" FontSize="12" Foreground="#94A3B8"/>
                                        <TextBlock Text="15 minutes ago" FontSize="11" Foreground="#64748B" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Ellipse Width="8" Height="8" Fill="#F59E0B" Margin="0,6,12,0"/>
                                    <StackPanel>
